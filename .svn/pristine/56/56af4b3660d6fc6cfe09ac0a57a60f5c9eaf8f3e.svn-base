<script type="text/javascript">




    $('#txtRooms').on('change', function () {
        if (this.value == '1') {
            $("#lblRoom1").show();
            $("#room1").show();
            $("#room3").hide();
            $("#room2").hide();
            $("#txtAdults2").hide();
            $("#txtChild2").hide();
            $("#lblRoom2").hide();
            $("#txtAdults3").hide();
            $("#txtChild3").hide();
            $("#lblRoom3").hide();
            $("#C3Age1").hide();
            $("#C3Age2").hide();
            $("#C3Age3").hide();
            $("#C3Age4").hide();
            $("#C2Age1").hide();
            $("#C2Age2").hide();
            $("#C2Age3").hide();
            $("#C2Age4").hide();

        }
        if (this.value == '2') {
            $("#lblRoom2").show();
            $("#lblRoom1").show();
            $("#room1").show();
            $("#room2").show();
            $("#room3").hide();
            $("#txtAdults2").show();
            $("#txtChild2").show();
            $("#txtAdults3").hide();
            $("#txtChild3").hide();
            $("#lblRoom3").hide();
            $("#C3Age1").hide();
            $("#C3Age2").hide();
            $("#C3Age3").hide();
            $("#C3Age4").hide();
            var num = document.getElementById("txtChild2").value;
            if (num == 0) {
                $("#C2Age1").hide();
                $("#C2Age2").hide();
                $("#C2Age3").hide();
                $("#C2Age4").hide();
            }
            else if (num == 1) {
