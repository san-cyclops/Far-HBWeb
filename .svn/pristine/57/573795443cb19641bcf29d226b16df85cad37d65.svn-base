<script type="text/javascript">
    $('#txtRooms').on('change', function () {
        if (this.value == '1') {
            $("#lblRoom1").show();
            $("#room1").show();
            $("#room3").hide();
            $("#room2").hide();
            $("#txtAdults2").hide();
            $("#txtChild2").hide();
            $("#lblRoom2").hide();
            $("#txtAdults3").hide();
            $("#txtChild3").hide();
            $("#lblRoom3").hide();
            $("#C3Age1").hide();
            $("#C3Age2").hide();
            $("#C3Age3").hide();
            $("#C3Age4").hide();
            $("#C2Age1").hide();
            $("#C2Age2").hide();
            $("#C2Age3").hide();
            $("#C2Age4").hide();
            $("#lblAges1").hide();
            $("#lblAges2").hide();
            $("#lblAges3").hide();
        }
        if (this.value == '2') {
            $("#lblRoom2").show();
            $("#lblRoom1").show();
