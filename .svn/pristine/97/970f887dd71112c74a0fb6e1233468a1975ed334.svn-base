
@{
    Layout = null;
}

<!DOCTYPE html>

<html>

<<body ng-controller="payController" data-ng-app="RoomPayment">

    <div class="panel panel-yellow" style="padding-right:5%;padding-left:5%;">
        <div class="panel-heading" style="font-size:23px;">
            Room Payment
        </div>
        <br />

        <form action="#" class="form-horizontal">
            <div class="form-body pal">
                <div class="form-group">

                    <label for="inputName" class="col-md-3 control-label"> Booking No </label>

                    <div class="col-md-3">
                        <div class="input-icon right">
                            <select class="form-control" data-ng-model="booking" ng-options="p for p in bno"></select>

                        </div>
                    </div>
                    <div class="col-md-3">

                    </div>
                    <div class="col-md-3">

                    </div>
                </div>

                <div class="form-group">
                    <label for="inputrefference" class="col-md-3 control-label"> Amount </label>
                    <div class="col-md-3">
                        <div class="input-icon right">

                            <input id="amount" type="text" class="form-control" data-ng-model="amount" style="padding-left:40px;" />
                        </div>

                    </div>
                    <div class="col-md-3">

                    </div>
                    <div class="col-md-3">

                    </div>
                </div>

                <div class="form-group">
                    <label for="inputrefference" class="col-md-3 control-label"> Tax </label>
                    <div class="col-md-3">
                        <div class="input-icon right">

                            <input id="tax" type="text" placeholder="" class="form-control" data-ng-model="tax" style="padding-left:40px;" />
                        </div>

                    </div>
                    <div class="col-md-3">

                    </div>
                    <div class="col-md-3">

                    </div>
                </div>
                <div class="form-group">
                    <label for="inputrefference" class="col-md-3 control-label"> Total </label>
                    <div class="col-md-3">
                        <div class="input-icon right">

                            <input id="tot" type="text" class="form-control" data-ng-model="total" style="padding-left:40px;" />
                        </div>

                    </div>
                    <div class="col-md-3">

                    </div>
                    <div class="col-md-3">

                    </div>
                </div>

            </div>
        </form>

    </div>
</body>
</html>
