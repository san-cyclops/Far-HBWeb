@import url('headerCSS.css');
body {
    
}


.topnav {
    overflow: hidden;
    list-style-type: none;
    margin: 0;
    padding: 0;
    overflow: hidden;
    background-color: #1b3c6f;
    width:99%!important;
}

    .topnav a {
        float: left;
        display: block;
        text-align: center;
        text-decoration: none!important;
        font-size: 13px;
        display: block;
        color: white;
        padding: 20px 20px;
        font-weight:bold;
    }

        .topnav a:hover {
            background-color: #2d2d2d;
            color: white;
        }

    .topnav .icon {
        display: none;
    }

@media screen and (max-width: 800px) {
    .topnav a:not(:first-child) {
        display: none;
    }

    .topnav a.icon {
        float: right;
        display: block;
    }
}

@media screen and (max-width: 850px) {
    .topnav.responsive {
        position: relative;
    }

        .topnav.responsive .icon {
            position: absolute;
            right: 0;
            top: 0;
        }

        .topnav.responsive a {
            float: none;
            display: block;
            text-align: left;
        }

        #image {
    position: relative;
    left: 150px;
}

}








.upper {
    color: #535456;
}

    .upper ul {
        width:99%!important;
        list-style-type: none;
        margin: 0;
        padding: 0;
        overflow: hidden;
        background-color: #eff0f2;
        color: #535456;
        box-shadow: #959aa5 1px 1px;
        border-top: 4px solid #1b3c6f;
        height: 30px;
    }

    .upper li {
        float: left;
        color: #535456;
        text-align: right;
    }

        .upper li a {
            display: block;
            padding: 8px;
            color: #535456;
        }


#mySidenav a {
    position: absolute;
    right:15px;
    transition: 0.3s;
    padding:0.1%;
    width: 290px;
        border-radius: 5px 0px 0px 5px;
    text-decoration: none;
    font-size: 20px;
    color: white;
}

#mySidenav a:hover {
    right:25px;
}

#about {
    top: 46px;
    background-color:#004466;
}

#blog {
    top: 8px;
    background-color:#2196F3;
}

@media only screen and (max-width: 800px) {

    #mySidenav a {
        position: absolute;
        left: -135px;
        transition: 0.3s;
        padding: 0.1%;
        width: 175px;
        / height: 10px;
        / border-radius: 0px 5px 5px 0px;
        text-decoration: none;
        font-size: 10px;
        color: white;
    }

        #mySidenav a:hover {
            left: 0px;
        }

    #about {
        top: -9px;
        background-color: #004466;
        text-align:left;
    }

    #blog {
        top: -70px;
        background-color: #2196F3;
        text-align:left;
    }
}



    /*media query for chrome*/
    /* Chrome 29+ */
    @media screen and (-webkit-min-device-pixel-ratio:0) and (min-resolution:.001dpcm) {
        .upper ul {
            padding-left: 100px;
        }

        .topnav {
            padding-left: 100px;
            padding-right:10px
        }

        a, u {
            text-decoration: none !important;
        }
    }


      @media only screen and (max-width: 768px) {
       .topnav a
        {
        padding: 10px!important;
        }
}



    @media only screen and (max-width: 800px) {

        #logomobile {
            height: 100px;
        }

        .image-logo {
            width: 250px!important;
            height: 65px!important;
            padding-top: 20px!important;
            padding-left:5px;
            padding-right:20px;
        }

