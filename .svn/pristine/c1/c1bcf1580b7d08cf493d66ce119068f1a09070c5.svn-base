@{
  
  Layout = "~/Views/Shared/_Layout.cshtml";
     

}

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<style>

body {
  font: 13px/20px 'Lucida Grande', Tahoma, Verdana, sans-serif;
 
}

.container {
padding-top:200px;
  width: 640px;
}

.login {
  position: relative;
  margin: 0 auto;
  padding: 20px 20px 20px;
  width: 400px;
  background: #afb7c6;
  border-radius: 3px;

  &:before {
    content: '';
    position: absolute;
    top: -8px; right: -8px; bottom: -8px; left: -8px;
    z-index: -1;
    background: rgba(black, .08);
    border-radius: 4px;
  }
input {
  font-family: 'Lucida Grande', Tahoma, Verdana, sans-serif;
  font-size: 14px;
}
    .cancel {
    border:none;border-radius:4px;margin-top:40px;background-color:#6b9cef;
    }

.cancel:hover 
{
    background-color: #0d46a8!important;
    color: white!important;
}

</style>

<body>
    <div data-ng-app="mymodule">
        <div ng-controller="ctrl">
            <div>
                <section class="container" id="Login">
                    <div class="login">
                        <form style="text-align:center;">
                                <label>Referrence Number:</label>
                                <input type="text" ng-model="referrenceNumber" style="border-radius:2px;border:none;" /> 
                         
                            <input type="submit" class="cancel" value="Cancel Booking" data-ng-click="cancelBooking()" style="border:none;border-radius:4px;margin-top:40px;background-color:#3d74d3;color:white;">
                         </form>
                    </div>

                </section>
            </div>
        </div>
    </div>
</body>

<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/Scripts/angular.min.js"></script>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/ApiBookingCancellation/Controller.js"></script>