@model HB.HotelRez.Models.UserFormData
@{
    ViewBag.Title = "RoomBooking";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>UserForm</h2>

<head>
  
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script data-require="ui-bootstrap" data-semver="0.11.0" src="http://angular-ui.github.io/bootstrap/ui-bootstrap-tpls-0.11.0.min.js"></script>
    <link data-require="bootstrap-css" data-semver="3.2.0" rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" />
    <script data-require="angular.js" data-semver="1.3.1" src="//code.angularjs.org/1.3.1/angular.js"></script>
    <style>
    
    </style>
</head>



<html>
<body ng-controller="userController" data-ng-app="userForm">

    <div class="panel panel-dark">
        <div class="panel-heading">
            User Form
        </div>
        <form action="#" class="form-horizontal">
            <div class="form-body pal">
                <div class="form-group">
                    <label for="usertype" class="col-md-3 control-label">User Name</label>
                    <div class="col-md-3">
                        <div class="input-icon right">
                            @using (Html.BeginForm("UserForm", "Home", FormMethod.Post))
                            {
                                @Html.DropDownListFor(m => m.UserName, Model.UserNames, "Please select UserName", new { @class = "form-control", @style = "padding-left:5%;", @ng_model = "username", @ng_change = "change(IsActive)" })
                            }
                        </div>

                    </div>
                    <div class="col-md-3">
                        <button type="button" class="btn btn-info" ng-click="show=!show" style="margin-left:10px;">
                            New
                        </button>
                    </div>
                    <div class="col-md-3"></div>
                </div>
                <div class="form-group" ng-show="show">
                    <label for="usertype" class="col-md-3 control-label">User Name</label>
                    <div class="col-md-3">
                        <div class="input-icon right">
                         <input id="uname" type="text" placeholder="User Name" class="form-control" ng-model="username" required />
                        </div>

                    </div>
                    <div class="col-md-3"></div>
                    <div class="col-md-3"></div>
                </div>

                <div class="form-group">
                    <label for="usertype" class="col-md-3 control-label">User Type</label>
                    <div class="col-md-3">
                        <div class="input-icon right">

                            <select class="form-control" data-ng-model="usertype">

                                <option>Admin</option>
                                <option>User</option>
                                <option>Guest</option>
                               
                               
                            </select>
                        </div>

                    </div>
                    <div class="col-md-3"></div>
                    <div class="col-md-3"></div>
                </div>
                <div class="form-group">

                    <label for="hcode" class="col-md-3 control-label">Hotel Code </label>

                    <div class="col-md-3">
                        <div class="input-icon right">

                            @using (Html.BeginForm("UserForm", "Home", FormMethod.Post))
                            {
                                @Html.DropDownListFor(m => m.HotelCode, Model.HotelCodes, "Please select Hotel code", new { @class = "form-control", @style = "padding-left:5%;", @ng_model = "hcode"})
                            }                      
                        </div>
                    </div>
                    <div class="col-md-3"></div>
                    <div class="col-md-3"></div>
                </div>
                <div class="form-group">
                    <label for="password" class="col-md-3 control-label"> Password </label>
                    <div class="col-md-3">
                        <div class="input-icon right">

                            <input id="ppassword" type="password" placeholder="Password" class="form-control" data-ng-model="password" required />
                        </div>

                    </div>
                    <div class="col-md-3"></div>
                    <div class="col-md-3"></div>
                </div>
                <div class="form-group">
                    <Div class="col-md-3"> </Div>
                    <div class="col-md-3">
                        <div class="input-icon right">

                            <input id="cpassword" type="password" placeholder="Confirm Password" class="form-control" data-ng-model="cpassword" required />
                        </div>

                    </div>
                    <div class="col-md-3"></div>
                    <div class="col-md-3"></div>
                </div>
                <div class="form-group">
                    <div class="col-md-3 ">

                    </div>


                    <div class="col-md-3">
                        <div class="input-icon right">
                            <button type="submit" class="btn btn-primary" ng-click="save()" id="btnSubmit">
                                Save
                            </button>
                        </div>

                    </div>
                    <div class="col-md-3"></div>
                    <div class="col-md-3"></div>
                </div>


            </div>

        </form>

    </div>


    <script data-require="angular.js@1.4.0" data-semver="1.4.0" src="https://code.angularjs.org/1.4.0/angular.js"></script>
    <script src="~/Scripts/HotelSupplier/UserForm.js"></script>
</body>
</html>
